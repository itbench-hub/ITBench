---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{ [injection_task.args.kubernetesObject.metadata.name, "ingress"] | ansible.builtin.join("-") }}
  namespace: {{ injection_task.args.kubernetesObject.metadata.namespace }}
spec:
  podSelector:
    matchLabels: {{ faults_workload.resources[0].spec.template.metadata.labels }}
  policyTypes:
    - Ingress
  ingress:
    - ports: []
