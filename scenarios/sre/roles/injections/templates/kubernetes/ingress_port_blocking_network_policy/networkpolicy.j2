---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{ [injections_workload.resources[0].metadata.name, "ingress"] | join("-") }}
  namespace: {{ injections_workload.resources[0].metadata.namespace }}
spec:
  podSelector:
    matchLabels: {{ injections_workload.resources[0].spec.template.metadata.labels }}
  policyTypes:
    - Ingress
  ingress:
    - ports: []
