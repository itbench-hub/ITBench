---
apiVersion: security.istio.io/v1
kind: AuthorizationPolicy
metadata:
  name: {{ [injections_gateway.resources[0].metadata.name, "deny"] | join("-") }}
  namespace: {{ injections_gateway.resources[0].metadata.name }}
spec:
  action: DENY
  targetRef:
    group: gateway.networking.k8s.io
    kind: Gateway
    name: {{ injections_gateway.resources[0].metadata.name }}
  rules:
    - to:
        - operation:
            methods: {{ injection_task.args.httpMethods }}
