---
apiVersion: apps/v1
kind: DaemonSet
metadata:
  labels:
    app.kubernetes.io/name: application-operator
    app.kubernetes.io/managed-by: ITBench
  name: application-operator
  namespace: {{ injections_args.kubernetesObject.metadata.namespace }}
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: application-operator
      app.kubernetes.io/managed-by: ITBench
  template:
    metadata:
      labels:
        app.kubernetes.io/name: application-operator
        app.kubernetes.io/managed-by: ITBench
    spec:
      containers:
        - name: worker
          image: registry.access.redhat.com/ubi10-minimal:10.1-1769677092
          command:
            - /bin/sh
          args:
            - -c
            - "sleep infinity"
