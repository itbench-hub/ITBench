---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app.kubernetes.io/component: pod-priority-eviction-fault
    app.kubernetes.io/name: critical-data-collector
    app.kubernetes.io/part-of: fault-injection
    app.kubernetes.io/managed-by: ITBench
  name: critical-data-collector
  namespace: {{ injections_args.kubernetesObject.metadata.namespace }}
spec:
  replicas: {{ replicas + 1 }}
  selector:
    matchLabels:
      app.kubernetes.io/component: pod-priority-eviction-fault
      app.kubernetes.io/name: critical-data-collector
      app.kubernetes.io/part-of: fault-injection
      app.kubernetes.io/managed-by: ITBench
  template:
    metadata:
      labels:
        app.kubernetes.io/component: pod-priority-eviction-fault
        app.kubernetes.io/name: critical-data-collector
        app.kubernetes.io/part-of: fault-injection
        app.kubernetes.io/managed-by: ITBench
    spec:
      containers:
        - name: worker
          image: registry.access.redhat.com/ubi10-minimal:10.1-1769677092
          command:
            - /bin/sh
          args:
            - -c
            - "sleep infinity"
          resources:
            requests:
              cpu: {{ ((((injections_node.status.allocatable.cpu | int) - 1) / replicas) * 1000) }}m
              memory: 1Mi
      nodeSelector:
        "kubernetes.io/hostname": {{ injections_node.metadata.name }}
      priorityClassName: application-critical
