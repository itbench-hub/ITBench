{# Delimiters are changed to allow RenovateBot to track dependencies. #}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app.kubernetes.io/component: load-generator
    app.kubernetes.io/managed-by: ITBench
    app.kubernetes.io/part-of: bookinfo
  name: load-generator-product-page
  namespace: [[ applications_instances.book_info.namespace ]]
spec:
  replicas: 3
  selector:
    matchLabels:
      app.kubernetes.io/component: load-generator
      app.kubernetes.io/managed-by: ITBench
      app.kubernetes.io/part-of: bookinfo
  template:
    metadata:
      labels:
        app.kubernetes.io/component: load-generator
        app.kubernetes.io/managed-by: ITBench
        app.kubernetes.io/part-of: bookinfo
    spec:
      containers:
        - name: generator
          image: registry.access.redhat.com/ubi10-minimal:10.1-1764604111
          command:
            - /bin/sh
          args:
            - -c
            - "while true; do curl [[ [applications_book_info_gateway_endpoints.http, '/productpage'] | join ]]; sleep 5; done"
