---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: kafka-exporter
  namespace: {{ applications_managers.opentelemetry_demo.kubernetes.namespace }}
  labels:
    app.kubernetes.io/name: kafka-exporter
    app.kubernetes.io/component: monitoring
    app.kubernetes.io/part-of: opentelemetry-demo
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: kafka-exporter
  template:
    metadata:
      labels:
        app.kubernetes.io/name: kafka-exporter
        app.kubernetes.io/component: monitoring
    spec:
      containers:
      - name: kafka-exporter
        image: danielqsj/kafka-exporter:v1.8.0
        args:
        - --kafka.server=kafka:9092
        - --kafka.version=2.0.0
        - --web.listen-address=:9308
        - --group.filter=.*
        ports:
        - containerPort: 9308
          name: metrics
          protocol: TCP
        livenessProbe:
          httpGet:
            path: /metrics
            port: 9308
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /metrics
            port: 9308
          initialDelaySeconds: 10
          periodSeconds: 5
        resources:
          requests:
            cpu: 100m
            memory: 128Mi
          limits:
            cpu: 200m
            memory: 256Mi
