{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(jq:*)",
      "WebFetch(domain:github.com,path:/prometheus-community/helm-charts/*)",
      "WebFetch(domain:raw.githubusercontent.com,path:/prometheus-community/helm-charts/*)"
    ],
    "deny": []
  },
  "hooks": {
    "UserPromptSubmit": {
      "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/skill-activation-prompt.sh"
    }
  },
  "mcpServers": {
    "enableAllProjectMcpServers": true
  }
}
