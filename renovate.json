{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "All OpenTelemetry Collector Builder Dependencies",
      "groupSlug": "opentelemetry-collector-builder-group",
      "matchPackageNames": [
        "/^github.com/open-telemetry/opentelemetry-collector-contrib/connector//",
        "/^github.com/open-telemetry/opentelemetry-collector-contrib/exporter//",
        "/^github.com/open-telemetry/opentelemetry-collector-contrib/extension//",
        "/^github.com/open-telemetry/opentelemetry-collector-contrib/processor//",
        "/^github.com/open-telemetry/opentelemetry-collector-contrib/receiver//",
        "/^go.opentelemetry.io/collector/confmap/provider//",
        "/^go.opentelemetry.io/collector/connector//",
        "/^go.opentelemetry.io/collector/exporter//",
        "/^go.opentelemetry.io/collector/extension//",
        "/^go.opentelemetry.io/collector/processor//",
        "/^go.opentelemetry.io/collector/receiver//"
      ]
    },
    {
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "registry.access.redhat.com/ubi10/go-toolset"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "enabled": false,
      "matchFileNames": [
        "scenarios/sre/roles/faults/tasks/inject_nonexistent_kubernetes_workload_container_image.yaml"
      ],
      "matchManagers": [
        "ansible"
      ]
    }
  ],
  "ansible": {
    "managerFilePatterns": [
      "/(^|/)molecule/[^/]+/create\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "scenarios/sre/roles/applications/defaults/main/managers.yaml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)\\s+registryUrl=(?<registryUrl>.*?)\\n\\s*reference:.*?\\n\\s*version:\\s*(?<currentValue>.*)"
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "scenarios/sre/roles/applications/defaults/main/managers.yaml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)\\n\\s+repository:.*?\\n\\s+tag:\\s*(?<currentValue>.*)"
      ]
    }
  ],
  "gomod": {
    "postUpdateOptions": [
      "gomodTidy"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/(^|/)daemonsets?.ya?ml$/",
      "/(^|/)deployments?.ya?ml$/",
      "/(^|/)deployments?.j2$/",
      "/(^|/)jobs?.ya?ml$/",
      "/(^|/)jobs?.j2$/",
      "/(^|/)statefulsets?.ya?ml$/",
      "/(^|/)statefulsets?.j2$/"
    ]
  },
  "ocb": {
    "managerFilePatterns": [
      "/(^|/)builder(-config)?.ya?ml$/",
      "/(^|/)manafest.ya?ml$/"
    ]
  }
}
